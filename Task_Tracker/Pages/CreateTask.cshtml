@page "/CreateTask"
@model Task_Tracker.Pages.CreateTaskModel
@{
}

<h1>Task Tracker - Create Task</h1>
<form method="post">

    @Html.ValidationSummary()
    @Html.ValidationMessageFor(model => model.ToDoItem.ToDoItemName)
    @Html.ValidationMessageFor(model => model.ToDoItem.ToDoItemDescription)
    @Html.ValidationMessageFor(model => model.ToDoItem.DueDate)
    @Html.ValidationMessageFor(model => model.ToDoItem.StatusId)

    <div class="form-group">
        <label for="taskName">Task Name</label>
        <input type="text" class="form-control" id="taskName" placeholder="Enter Task Name" asp-for="ToDoItem.ToDoItemName">
    </div>
    <div class="form-group">
        <label for="taskDescription">Task Description</label>
        <input type="text" class="form-control" id="taskDescription" placeholder="Enter Task Description" asp-for="ToDoItem.ToDoItemDescription">
    </div>
    <div class="form-group">
        <label for="dueDate">Due Date</label>
        <input type="date" class="form-control" id="dueDate" placeholder="Enter Due Date" asp-for="ToDoItem.DueDate">
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" id="status" asp-for="ToDoItem.StatusId">
            @foreach (var status in Model.Statuses)
            {
                <option value="@status.StatusId">@status.StatusName</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="ToDoItem.Username" />
    <button type="submit" class="btn btn-primary pt-2">Submit</button>
</form>