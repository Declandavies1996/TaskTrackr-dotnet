@page "/DeleteTask/{toDoItemId}"
@model Task_Tracker.Pages.DeleteTaskModel
@{
}

<h1>Task Tracker - Delete Task</h1>
<form>
<div class="form-group">
        <label for="taskName">Task Name</label>
        <input type="text" class="form-control" id="taskName" placeholder="Enter Task Name" asp-for="ToDoItem.ToDoItemName" disabled>
    </div>
    <div class="form-group">
        <label for="taskDescription">Task Description</label>
        <input type="text" class="form-control" id="taskDescription" placeholder="Enter Task Description" asp-for="ToDoItem.ToDoItemDescription" disabled>
    </div>
    <div class="form-group">
        <label for="dueDate">Due Date</label>
        <input type="date" class="form-control" id="dueDate" placeholder="Enter Due Date" asp-for="ToDoItem.DueDate" disabled>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" class="form-control" id="status" asp-for="ToDoItem.StatusId" disabled>
    </div>

    <input type="hidden" asp-for="ToDoItem.Username" />
    <input type="hidden" asp-for="ToDoItem.ToDoItemId" />

    <button type="submit" class="btn btn-primary pt-2">Submit</button>
</form>